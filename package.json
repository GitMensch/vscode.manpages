{
	"name": "manpages",
	"displayName": "manpages",
	"publisher": "meronz",
	"description": "Quickly open man pages and navigate through them.",
	"version": "0.0.6",
	"author": {
		"name": "Salvatore Merone"
	},
	"readme": "README.md",
	"license": "GPLv3",
	"repository": {
		"type": "git",
		"url": "https://github.com/meronz/vscode.manpages"
	},
	"bugs": {
		"url": "https://github.com/meronz/vscode.manpages/issues"
	},
	"homepage": "https://github.com/meronz/vscode.manpages",
	"qna": "https://github.com/meronz/vscode.manpages/issues",
	"keywords": [
		"man",
		"page",
		"manpage",
		"linux",
		"shell",
		"C",
		"docs"
	],
	"engines": {
		"vscode": "^1.61.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "openFromSelection",
				"category": "Man",
				"title": "Open man page",
				"enablement": "!inQuickOpen"
			},
			{
				"command": "openFromInput",
				"category": "Man",
				"title": "Open page"
			},
			{
				"command": "searchFromInput",
				"category": "Man",
				"title": "Search (apropos)"
			},
			{
				"title": "openSearchResult",
				"command": "openSearchResult",
				"category": "Man",
				"enablement": "!inQuickOpen"
			}
		],
		"menus": {
			"editor/context": [
				{
					"command": "openFromSelection",
					"group": "navigation"
				}
			]
		},
		"viewsContainers": {
			"activitybar": [
				{
					"id": "searchResults",
					"title": "Man search results",
					"icon": "media/activitybar.svg"
				}
			]
		},
		"views": {
			"searchResults": [
				{
					"id": "searchResults",
					"name": "Man search results",
					"icon": "media/activitybar.svg",
					"contextualTitle": "Search Results",
					"when": "manpages:hasResults"
				}
			]
		},
		"configuration": {
			"title": "Manpages",
			"properties": {
				"manpages.binary.path": {
					"type": "string",
					"default": "man",
					"description": "Specifies the path of the man binary to execute"
				},
				"manpages.binary.args": {
					"type": "array",
					"default": [],
					"description": "Specifies the arguments to be passed to the man binary"
				},
				"manpages.apropos.path": {
					"type": "string",
					"default": "apropos",
					"description": "Specifies the path of the apropos binary to execute"
				},
				"manpages.apropos.args": {
					"type": "array",
					"default": [],
					"description": "Specifies the arguments to be passed to the apropos binary"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run esbuild-base -- --minify",
		"esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node",
		"esbuild": "npm run esbuild-base -- --sourcemap",
		"esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.4",
		"@types/mocha": "^9.0.0",
		"@types/node": "14.x",
		"@types/vscode": "^1.61.0",
		"@typescript-eslint/eslint-plugin": "^4.31.1",
		"@typescript-eslint/parser": "^4.31.1",
		"@vscode/test-electron": "^1.6.2",
		"esbuild": "^0.13.10",
		"eslint": "^7.32.0",
		"glob": "^7.1.7",
		"mocha": "^9.1.1",
		"typescript": "^4.4.3"
	}
}